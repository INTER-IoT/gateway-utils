<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>dist</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>eu.interiot.gateway.distribution:physical-gateway</include>
				<include>eu.interiot.gateway.extension.common:*</include>
				<include>eu.interiot.gateway.extension.physical:*</include>
			</includes>
			<outputDirectory>physical-gateway-${version}</outputDirectory>
			<unpack>true</unpack>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>eu.interiot.gateway.distribution:virtual-gateway</include>
				<include>eu.interiot.gateway.extension.common:*</include>
				<include>eu.interiot.gateway.extension.virtual:*</include>
			</includes>
			<outputDirectory>virtual-gateway-${version}</outputDirectory>
			<unpack>true</unpack>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/deploy/physical</directory>
			<outputDirectory>physical-gateway-${version}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/deploy/virtual</directory>
			<outputDirectory>virtual-gateway-${version}</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>